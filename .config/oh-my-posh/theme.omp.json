{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "display_host": true
          },
          "template": "<{{ if .Root }}lightRed{{ else }}red{{ end }}>\u250c\u2500\u2500(</>{{ .UserName }}{{ if .Root }} \udb82\udcc7 {{ else }} \udb82\udcc7 {{ end }}{{ .HostName }}<{{ if .Root }}lightRed{{ else }}red{{ end }}>)</>",
          "foreground": "lightWhite",
          "type": "session",
          "style": "plain",
          "foreground_templates": [
            "{{ if .Root }}lightRed{{ end }}"
          ]
        },
        {
          "properties": {
            "fetch_version": false,
            "fetch_virtual_env": true
          },
          "template": "<{{ if .Root }}lightRed{{ else }}red{{ end }}>-[</>\ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }}{{ end }}{{ .Full }}{{ end }}<{{ if .Root }}lightRed{{ else }}red{{ end }}>]</>",
          "foreground": "yellow",
          "type": "python",
          "style": "plain"
        },
        {
          "properties": {
            "folder_separator_icon": "<#c0c0c0>/</>",
            "style": "full"
          },
          "template": "<{{ if .Root }}lightRed{{ else }}red{{ end }}>-[</>{{ .Path }}<{{ if .Root }}lightRed{{ else }}red{{ end }}>]</>",
          "foreground": "lightWhite",
          "type": "path",
          "style": "plain"
        },
        {
          "template": "<{{ if .Root }}lightRed{{ else }}red{{ end }}>-[</>{{ .HEAD }}<{{ if .Root }}lightRed{{ else }}red{{ end }}>]</>",
          "foreground": "white",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "style": "round"
          },
          "template": " {{ .FormattedMs }} ",
          "foreground": "white",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true
          },
          "template": " {{ if gt .Code 0 }}<white>({{ .Code }})</> \u2a2f{{else}}âœ“{{ end }} ",
          "foreground": "lightGreen",
          "type": "exit",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "<{{ if .Root }}lightRed{{ else }}red{{ end }}>\u2514\u2500</>{{ if .Root }}<lightRed>#</>{{ else }}${{ end }} ",
          "foreground": "lightWhite",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
